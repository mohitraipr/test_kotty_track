      let offset  = <%= initialLimit %>;
      const limit = <%= initialLimit %>;
      const market= '<%= selectedMarketplace||'' %>';
      let loading = false;

      const accordion = document.getElementById('uploadsAccordion');
      const sentinel  = document.getElementById('files-sentinel');

